# Docker environment configuration
# This is the main configuration for the Tymelyne app in Docker
# Duplicate this file as .env and replace [YOUR_LOCAL_IP] with your actual IP address

# Backend settings
DEBUG=1
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,backend,frontend,host.docker.internal,[YOUR_LOCAL_IP]
CORS_ORIGIN_WHITELIST=http://frontend:19000,http://frontend:19001,http://frontend:19002,http://localhost:19000,http://localhost:19001,http://localhost:19002,http://localhost:8081,http://localhost:8082,http://localhost:8083,http://localhost:8084,http://[YOUR_LOCAL_IP]:19000,http://[YOUR_LOCAL_IP]:19001,http://[YOUR_LOCAL_IP]:19002,http://[YOUR_LOCAL_IP]:8081,http://[YOUR_LOCAL_IP]:8082,http://[YOUR_LOCAL_IP]:8083,http://[YOUR_LOCAL_IP]:8084,exp://localhost:19000,exp://[YOUR_LOCAL_IP]:19000
CORS_ALLOW_ALL_ORIGINS=True
DATABASE_URL=sqlite:////app/db.sqlite3
STATIC_ROOT=/app/staticfiles
STATIC_URL=/static/
SECRET_KEY=your-secure-secret-key-here
LOCAL_IP=[YOUR_LOCAL_IP]

# Frontend settings
REACT_APP_API_URL=docker
REACT_APP_BACKEND_URL=http://[YOUR_LOCAL_IP]:8000
EXPO_PACKAGER_HOSTNAME=[YOUR_LOCAL_IP]
REACT_NATIVE_PACKAGER_HOSTNAME=[YOUR_LOCAL_IP]
NODE_ENV=development
EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0
WATCHPACK_POLLING=true 