# Server Configuration
NODE_ENV=development
PORT=5001

# MongoDB Connection
MONGODB_URI=mongodb://mongo:27017/tymelyne

# JWT Token
JWT_SECRET=secret_key_change_in_production

# Email Service Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tymelyne.authentication@gmail.com
SMTP_PASSWORD=app_password_here

# Frontend URL (for email verification links) THIS MIGHT THROW AN ERROR ON MAC. WINDOWS REQUIRES IP:8082
FRONTEND_URL=http://localhost:8082 

# Backend URL (explicit URL for email verification)
BACKEND_URL=http://localhost:5001

# OPENAI API KEY
OPENAI_API_KEY=your_openai_api_key

# Set to 'true' to use mock data instead of calling the OpenAI API
USE_MOCK_OPENAI=false

# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:8082,exp://localhost:8081,exp://localhost:8082 